<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <mode name="por-morph" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="por.automorf.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="por_PT-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="por.autogen.bin"/>
      </program>
    </pipeline>
  </mode>
  
  <mode name="por_BR-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="por_BR.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="por_PTpre1990-gener" install="yes">
    <pipeline>
      <program name="lt-proc -g">
        <file name="por_PTpre1990.autogen.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="por-tagger" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="por.automorf.bin"/>
      </program>
      <program name="cg-proc -w">
        <file name="por.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="por.prob"/>
      </program>
    </pipeline>
  </mode>

  <mode name="por-disam" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="por.automorf.bin"/>
      </program>
      <program name="cg-conv -a -l" />
      <program name="vislcg3 --trace -g">
        <file name="apertium-por.por.rlx"/>
      </program>
    </pipeline>
  </mode>

  <mode name="por-caps" install="yes">
    <pipeline>
      <program name="lt-proc -w">
        <file name="por.automorf.bin"/>
      </program>
      <program name="apertium-tagger -g $2 -p">
        <file name="por.prob"/>
      </program>
      <program name="apertium-extract-caps"/>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="por.autogen.bin"/>
      </program>
      <program name="apertium-restore-caps">
        <file name="por.crx.bin"/>
      </program>
    </pipeline>
  </mode>

</modes>

